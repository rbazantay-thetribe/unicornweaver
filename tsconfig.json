{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "isolatedModules": true,
    "paths": {
      "@app/attribute": [
        "libs/attribute/src"
      ],
      "@app/attribute/*": [
        "libs/attribute/src/*"
      ],
      "@app/item": [
        "libs/item/src"
      ],
      "@app/item/*": [
        "libs/item/src/*"
      ],
      "@app/tag": [
        "libs/tag/src"
      ],
      "@app/tag/*": [
        "libs/tag/src/*"
      ]
    }
  }
}